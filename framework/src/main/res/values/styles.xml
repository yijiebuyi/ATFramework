<resources>

    <style name="common_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="wheelDialogWindowAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>


    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置无边框 -->
        <!-- <item name="android:windowFrame">@null</item> -->
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置为浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 设置动画 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 点击空白部分消失 -->
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="common_dialog2" parent="common_dialog">
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CropMenuTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/px2</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/crop_image_ratio_color</item>
    </style>

    <style name="CustomizeCropTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px60</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:text">@string/input_crop_size</item>
        <item name="android:textColor">@color/customize_crop_title_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomizeCropEditText" parent="@android:style/Widget.DeviceDefault.Light.EditText">
        <item name="android:layout_width">@dimen/px360</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/customize_crop_edit_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@null</item>
        <item name="android:imeOptions">flagNoFullscreen</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_marginLeft">@dimen/px24</item>
    </style>

</resources>